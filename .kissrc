#!/usr/bin/env bash
case $- in
  *i*) export bash_interactive=1;;
esac

if [[ "$PROJECT" ]]; then
  if [[ "$bash_interactive" ]]; then
    HISTFILE=$HOME/.${PROJECT}_history
    PS1="\[\033[1;31m\]\$PROJECT\[\033[0m\] $ps1_backup"
  fi
else
  export path_backup="$PATH";
  export ps1_backup="$PS1";
fi

export PATH="$HOME/.bin/:$PATH"

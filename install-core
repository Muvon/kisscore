#!/bin/bash
if [[ "$1" == "" ]]; then
  echo 'Enter name of project to create. Example: ./install-core app'
  exit 1
fi

if [[ ! -e "$HOME/$1" ]]; then
  echo 'Cant find project dir '$HOME'/'$1'. Use ./make-app '$1
  exit 1
fi
core_file=$HOME/$1/app/core.php
echo '<?php' > $core_file
for file in `ls core`; do
  tail -n +2 core/$file >> $core_file
done
echo >> $core_file

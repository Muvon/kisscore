#!/bin/bash
[[ -z "$1" ]] && echo 'Enter name of project to create. Example: ./install-core app' && exit 255
[[ ! -e "$HOME/$1" ]] && echo 'Cant find project dir '$HOME'/'$1'. Use ./make-app '$1 && exit 255

core_file=$HOME/$1/app/core.php
echo '<?php' > $core_file
for file in `ls core`; do
  tail -n +2 core/$file >> $core_file
  echo >> $core_file
done

#!/usr/bin/env bash
exit_code=0
declare -A results

for k in "${!checks[@]}"; do
  ${checks[$k]} &> /dev/null
  [[ "$?" != "0" ]] && results["$k"]='\e[1;31mFail' && exit_code=1 || results["$k"]='\e[1;32mSuccess'
done

for k in "${!results[@]}"; do
  echo -e "\e[1;34m$k\e[0m - ${results[$k]}\e[0m"
done

exit $exit_code

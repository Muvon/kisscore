#!/usr/bin/env bash
if [[ -z "$1" ]]; then
  echo "Usage: $0 [path-to-file]"
  exit 1
fi
lockfile="/src/env/run/${1##*/}.lock"
trap release SIGSEGV SIGINT SIGTERM
release() {
  rm -f "$lockfile"
}

exec 9> "$lockfile"
flock -x -n 9 || {
  >&2 echo 'Instance is running already'
  >&2 echo "You can remove lock file to fix it: $lockfile"
  exit 1
}

bin/php-exec "$1" "${@:2}"
release
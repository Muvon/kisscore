#!/bin/bash
php=$(which php)
config=$($php --ini | head -n 1)
config=${config##* }

OPTS=''
if [[ -f $config ]]; then
  OPTS='-c '$config
fi
$php $OPTS <<EOF
<?php
  include getenv('KISS_CORE');

  // Получаем ответ   и выполняем запрос
  try {
    App::start();
    $1;
    App::stop();
  } catch (Exception \$E) {
    echo 'Error: ' . \$E->getMessage() . PHP_EOL . 'More info: tail -f $LOG_DIR/' . date('Ymd') . '-error.log';
  }
EOF
echo
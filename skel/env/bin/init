#!/bin/bash
echo 'Initialization started'

echo '+Configure and compile project'
php-exec 'App::compile()'
echo '...done'

echo '+Reloading services'
[[ -x /etc/init.d/nginx ]] && sudo /etc/init.d/nginx reload || sudo /usr/bin/systemctl reload nginx.service
[[ -x /etc/init.d/php-fpm ]] && sudo /etc/init.d/php-fpm reload || sudo /usr/bin/systemctl reload php-fpm.service
echo '...done'

echo '+Running init-app script'
[[ -x $BIN_DIR/init-app ]] && $BIN_DIR/init-app | xargs -l echo '  '
echo '...done'

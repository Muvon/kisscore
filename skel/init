#!/bin/bash
APP_DIR=$(dirname $0)
echo 'Initialization started'
echo '+Compile project'
$APP_DIR/php-exec 'App::compile()'
echo '...done'
echo '+Reloading services'
sudo /etc/init.d/nginx reload
echo '...done'
echo '+Starting tasks'
pkill -f -x $APP_DIR/run
nohup $APP_DIR/run > /dev/null 2>&1 &
echo '...done'
